export default function App() {
  const [currentPage, setCurrentPage] = useState('home'); 
  const [selectedProduct, setSelectedProduct] = useState(null);
  const [cart, setCart] = useState([]);
  const [isMobileMenuOpen, setIsMobileMenuOpen] = useState(false);
  const [activeCategory, setActiveCategory] = useState('All');
  const [wishlist, setWishlist] = useState([]);
  const [searchQuery, setSearchQuery] = useState('');
  
  // Custom Hamper & Tracking State
  const [latestOrderId, setLatestOrderId] = useState(null);
  
  // Global Points State (Starts at 450 for demo)
  const [crownPoints, setCrownPoints] = useState(450);

  // --- ACTIONS ---
  const addToCart = (product, quantity = 1) => {
    setCart(prev => {
      const existing = prev.find(item => item.id === product.id && !item.isCustomHamper);
      if (existing && !product.isCustomHamper) {
        return prev.map(item => item.id === product.id ? { ...item, qty: item.qty + quantity } : item);
      }
      return [...prev, { ...product, qty: quantity }];
    });
    const btn = document.getElementById(`add-btn-${product.id}`);
    if(btn) {
      btn.classList.add('animate-ping-once');
      setTimeout(() => btn.classList.remove('animate-ping-once'), 300);
    }
  };

  const updateQty = (id, delta) => setCart(prev => prev.map(item => item.id === id ? { ...item, qty: Math.max(1, item.qty + delta) } : item));
  const removeFromCart = (id) => setCart(prev => prev.filter(item => item.id !== id));
  const toggleWishlist = (id, e) => { if(e) e.stopPropagation(); setWishlist(prev => prev.includes(id) ? prev.filter(wId => wId !== id) : [...prev, id]); };
  const viewProduct = (product) => { setSelectedProduct(product); navigate('product'); };

  const cartTotal = cart.reduce((sum, item) => sum + (item.price * item.qty), 0);
  const cartItemCount = cart.reduce((sum, item) => sum + item.qty, 0);

  const navigate = (page) => {
    setCurrentPage(page);
    setIsMobileMenuOpen(false);
    window.scrollTo(0, 0);
  };

  // --- COMPONENTS ---
  const Header = () => (
    <nav className="sticky top-0 z-50 bg-white/90 backdrop-blur-xl border-b-4 border-slate-900 shadow-sm">
      <div className="bg-orange-500 text-white font-black py-2 overflow-hidden border-b-2 border-slate-900 relative">
        <div className="whitespace-nowrap animate-marquee flex items-center gap-8 text-sm tracking-widest uppercase">
          <span>üëë JOIN THE CROWN CLUB - EARN POINTS ON EVERY ORDER!</span>
          <span>‚ö° UNLOCK SECRET DISCOUNTS</span>
          <span>üöö TRACK YOUR ORDERS LIVE IN 3D</span>
          <span>‚ú® FREE DELIVERY OVER ‚Çπ500</span>
        </div>
      </div>
      
      <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div className="flex justify-between items-center h-20 gap-4">
          <button onClick={() => navigate('home')} className="flex-shrink-0 flex items-center group relative">
            <div className="text-3xl font-black tracking-tighter text-slate-900 flex items-center drop-shadow-[2px_2px_0_#f97316] relative z-10">
              M<span className="relative inline-block mx-[2px] text-orange-500">O<Crown className="absolute -top-5 left-1/2 -translate-x-1/2 w-7 h-7 text-red-500 drop-shadow-[1px_1px_0_#000] group-hover:-translate-y-2 group-hover:rotate-12 transition-transform duration-300" strokeWidth={2.5} /></span>MRAJ
            </div>
          </button>

          <div className="hidden lg:flex space-x-2 xl:space-x-3 items-center">
            <button onClick={() => navigate('shop')} className={`font-black uppercase tracking-wider text-sm px-3 py-2 rounded-lg transition-all ${currentPage === 'shop' ? 'bg-orange-500 text-white shadow-[2px_2px_0_#000]' : 'text-slate-700 hover:text-orange-600 hover:-translate-y-1'}`}>Shop</button>
            <button onClick={() => navigate('gifting')} className={`font-black uppercase tracking-wider text-sm px-3 py-2 rounded-lg transition-all flex items-center gap-1 ${currentPage === 'gifting' ? 'bg-pink-400 text-slate-900 shadow-[3px_3px_0_#000]' : 'bg-pink-100 text-pink-700 border-2 border-slate-900 shadow-[2px_2px_0_#000] hover:-translate-y-1 hover:shadow-[4px_4px_0_#000]'}`}><PartyPopper className="w-4 h-4"/> Gifting</button>
            <button onClick={() => navigate('custom-hamper')} className={`font-black uppercase tracking-wider text-sm px-3 py-2 rounded-lg transition-all flex items-center gap-1 ${currentPage === 'custom-hamper' ? 'bg-purple-500 text-white shadow-[3px_3px_0_#000]' : 'bg-purple-100 text-purple-700 border-2 border-slate-900 shadow-[2px_2px_0_#000] hover:-translate-y-1 hover:shadow-[4px_4px_0_#000]'}`}><Wand2 className="w-4 h-4"/> Build Hamper</button>
            {/* NEW REWARDS TAB */}
            <button onClick={() => navigate('rewards')} className={`font-black uppercase tracking-wider text-sm px-3 py-2 rounded-lg transition-all flex items-center gap-1 ${currentPage === 'rewards' ? 'bg-yellow-400 text-slate-900 shadow-[3px_3px_0_#000]' : 'bg-yellow-100 text-yellow-800 border-2 border-slate-900 shadow-[2px_2px_0_#000] hover:-translate-y-1 hover:shadow-[4px_4px_0_#000]'}`}><Trophy className="w-4 h-4"/> Crown Club</button>
            <button onClick={() => navigate('tracking')} className={`font-black uppercase tracking-wider text-sm px-3 py-2 rounded-lg transition-all flex items-center gap-1 ${currentPage === 'tracking' ? 'bg-teal-400 text-slate-900 shadow-[3px_3px_0_#000]' : 'bg-teal-100 text-teal-800 border-2 border-slate-900 shadow-[2px_2px_0_#000] hover:-translate-y-1 hover:shadow-[4px_4px_0_#000]'}`}><Truck className="w-4 h-4"/> Track</button>
          </div>

          <div className="flex items-center space-x-3 sm:space-x-4">
            <button onClick={() => navigate('wishlist')} className="p-2 text-slate-900 border-2 border-transparent hover:border-slate-900 rounded-xl hover:shadow-[3px_3px_0_#000] hover:-translate-y-1 transition-all relative hidden sm:block bg-white"><Heart className="w-5 h-5" />{wishlist.length > 0 && <span className="absolute -top-2 -right-2 w-5 h-5 bg-red-500 text-white font-black text-xs flex items-center justify-center rounded-full border-2 border-slate-900">{wishlist.length}</span>}</button>
            <button onClick={() => navigate('cart')} className="relative p-2 bg-orange-500 text-white rounded-xl border-2 border-slate-900 shadow-[4px_4px_0_#000] hover:-translate-y-1 hover:shadow-[6px_6px_0_#000] active:translate-y-1 active:shadow-[0px_0px_0_#000] transition-all flex items-center gap-2"><ShoppingBag className="w-5 h-5" /><span className="font-black text-sm pr-1">{cartItemCount}</span></button>
            <button className="lg:hidden p-2 text-slate-900 bg-yellow-300 rounded-xl border-2 border-slate-900 shadow-[3px_3px_0_#000]" onClick={() => setIsMobileMenuOpen(!isMobileMenuOpen)}>{isMobileMenuOpen ? <X className="w-6 h-6" /> : <Menu className="w-6 h-6" />}</button>
          </div>
        </div>
      </div>

      {isMobileMenuOpen && (
        <div className="lg:hidden bg-white border-y-4 border-slate-900 absolute w-full left-0 z-50">
          <div className="p-6 flex flex-col gap-4 pattern-bg">
            <button onClick={() => navigate('shop')} className="w-full bg-white border-2 border-slate-900 font-black text-xl py-3 rounded-xl shadow-[4px_4px_0_#000]">Shop All</button>
            <button onClick={() => navigate('rewards')} className="w-full bg-yellow-300 text-slate-900 border-2 border-slate-900 font-black text-xl py-3 rounded-xl shadow-[4px_4px_0_#000] flex justify-center items-center gap-2"><Trophy/> Crown Club Rewards</button>
            <button onClick={() => navigate('gifting')} className="w-full bg-pink-300 text-slate-900 border-2 border-slate-900 font-black text-xl py-3 rounded-xl shadow-[4px_4px_0_#000] flex justify-center items-center gap-2"><PartyPopper/> Gifting</button>
            <button onClick={() => navigate('custom-hamper')} className="w-full bg-purple-300 text-slate-900 border-2 border-slate-900 font-black text-xl py-3 rounded-xl shadow-[4px_4px_0_#000] flex justify-center items-center gap-2"><Wand2/> Build Hamper</button>
            <button onClick={() => navigate('tracking')} className="w-full bg-teal-300 text-slate-900 border-2 border-slate-900 font-black text-xl py-3 rounded-xl shadow-[4px_4px_0_#000] flex justify-center items-center gap-2"><Truck/> Track Order</button>
          </div>
        </div>
      )}
    </nav>
  );

  const ProductCard = ({ product }) => (
    <div onClick={() => viewProduct(product)} className={`bg-white rounded-3xl overflow-hidden border-4 border-slate-900 flex flex-col h-full relative cursor-pointer transform transition-transform duration-300 hover:-translate-y-2 hover:shadow-[8px_8px_0_#f97316] ${product.isHamper ? 'shadow-[8px_8px_0_#ec4899]' : product.isOffer ? 'shadow-[8px_8px_0_#eab308]' : 'shadow-[8px_8px_0_#1e293b]'}`}>
      <div className="absolute top-4 left-4 right-4 flex justify-between z-10 pointer-events-none">
        {product.badge ? (
          <span className={`text-sm font-black px-3 py-1.5 rounded-xl border-2 border-slate-900 shadow-[3px_3px_0_#000] ${product.isHamper ? 'bg-pink-300 text-slate-900' : product.isOffer ? 'bg-yellow-300 text-slate-900 animate-pulse-slow' : 'bg-white text-slate-900'}`}>{product.badge}</span>
        ) : <span />}
        <button onClick={(e) => toggleWishlist(product.id, e)} className="pointer-events-auto w-10 h-10 rounded-full bg-white border-2 border-slate-900 flex items-center justify-center shadow-[3px_3px_0_#000] hover:-translate-y-1 hover:shadow-[4px_4px_0_#000] active:translate-y-0 active:shadow-none transition-all"><Heart className={`w-5 h-5 ${wishlist.includes(product.id) ? 'fill-red-500 text-red-500' : 'text-slate-900'}`} /></button>
      </div>
      <div className={`h-56 w-full overflow-hidden relative ${product.isHamper ? 'bg-gradient-to-br from-pink-200 to-purple-200' : product.isOffer ? 'bg-gradient-to-br from-yellow-200 to-orange-200' : 'bg-slate-100'}`}>
        <img src={product.image} alt={product.name} className="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500 mix-blend-multiply" />
      </div>
      <div className="p-5 flex flex-col flex-grow bg-white relative z-10 border-t-4 border-slate-900">
        <h3 className="text-xl font-black text-slate-900 mb-2 leading-tight uppercase line-clamp-2">{product.name}</h3>
        <p className="text-sm text-slate-600 font-bold mb-4 bg-slate-100 inline-block px-2 py-1 rounded border border-slate-300 self-start">{product.category}</p>
        <div className="mt-auto flex items-center justify-between">
          <div className="flex flex-col">
            {product.originalPrice && <span className="text-sm text-slate-400 font-bold line-through decoration-red-500 decoration-2">‚Çπ{product.originalPrice}</span>}
            <span className="text-3xl font-black text-orange-600 drop-shadow-[1px_1px_0_#000]">‚Çπ{product.price}</span>
          </div>
          <button id={`add-btn-${product.id}`} onClick={(e) => { e.stopPropagation(); addToCart(product); }} className={`w-12 h-12 rounded-2xl border-2 border-slate-900 flex items-center justify-center transition-all ${product.isHamper ? 'bg-pink-300 shadow-[4px_4px_0_#000] hover:bg-pink-400' : product.isOffer ? 'bg-yellow-300 shadow-[4px_4px_0_#000] hover:bg-yellow-400' : 'bg-slate-900 text-white shadow-[4px_4px_0_#f97316] hover:bg-slate-800 hover:-translate-y-1 hover:shadow-[6px_6px_0_#f97316]'} active:translate-y-1 active:shadow-none`}><Plus className={`w-6 h-6 font-black ${product.isOffer || product.isHamper ? 'text-slate-900' : 'text-white'}`} strokeWidth={3} /></button>
        </div>
      </div>
    </div>
  );

  // --- VIEWS ---
  const HomeView = () => {
    const [heroIdx, setHeroIdx] = useState(0);
    const [touchStart, setTouchStart] = useState(null);
    const [touchEnd, setTouchEnd] = useState(null);

    const nextHero = () => setHeroIdx((prev) => (prev + 1) % HERO_CATEGORIES.length);
    const prevHero = () => setHeroIdx((prev) => (prev - 1 + HERO_CATEGORIES.length) % HERO_CATEGORIES.length);

    const onTouchStart = (e) => { setTouchEnd(null); setTouchStart(e.targetTouches[0].clientX); };
    const onTouchMove = (e) => setTouchEnd(e.targetTouches[0].clientX);
    const onTouchEndEvent = () => { if (!touchStart || !touchEnd) return; if (touchStart - touchEnd > 50) nextHero(); if (touchStart - touchEnd < -50) prevHero(); };

    const currentCat = HERO_CATEGORIES[heroIdx];
    const prevCat = HERO_CATEGORIES[(heroIdx + 1) % HERO_CATEGORIES.length];
    const backCat = HERO_CATEGORIES[(heroIdx + 2) % HERO_CATEGORIES.length];

    return (
      <div className="animate-fade-in relative">
        <section className="relative overflow-hidden bg-[#FF6B35] border-b-4 border-slate-900 pt-10 pb-16 transition-colors duration-1000" style={{backgroundColor: heroIdx % 2 === 0 ? '#FF6B35' : '#14B8A6'}}>
          <div className="absolute inset-0 opacity-10 pointer-events-none" style={{backgroundImage: `url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='1'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E")`}}></div>
          
          <div className="max-w-7xl mx-auto px-6 py-12 md:py-24 relative z-10 flex flex-col md:flex-row items-center gap-16">
            
            {/* DYNAMIC TEXT SECTION */}
            <div className="md:w-1/2 text-center md:text-left min-h-[300px] flex flex-col justify-center">
              {/* Adding key={heroIdx} forces React to re-mount these elements, re-triggering the animate-fade-in animation */}
              <div key={`badge-${heroIdx}`} className="inline-block py-2 px-4 rounded-xl border-4 border-slate-900 bg-yellow-300 text-slate-900 font-black tracking-wider uppercase text-sm mb-6 shadow-[4px_4px_0_#000] transform -rotate-2 animate-fade-in w-max mx-auto md:mx-0">
                {currentCat.badge}
              </div>
              
              <h1 key={`title-${heroIdx}`} className="text-6xl md:text-8xl font-black text-white leading-[1] mb-6 tracking-tighter drop-shadow-[6px_6px_0_#000] uppercase animate-fade-in">
                {currentCat.title1} <br/>
                <span className="text-yellow-300">{currentCat.title2}</span>
              </h1>
              
              {/* Added the enhanced black outline border to the caption box as requested */}
              <p key={`desc-${heroIdx}`} className="text-xl md:text-2xl text-white font-black mb-10 max-w-lg mx-auto md:mx-0 drop-shadow-[2px_2px_0_#000] bg-slate-900/40 p-5 rounded-2xl border-4 border-slate-900 shadow-[6px_6px_0_#000] backdrop-blur-sm animate-fade-in">
                {currentCat.desc}
              </p>
              
              <div className="flex flex-col sm:flex-row gap-6 justify-center md:justify-start">
                <button onClick={() => navigate('shop')} className="bg-slate-900 text-white text-xl font-black px-10 py-5 rounded-2xl border-4 border-slate-900 shadow-[8px_8px_0_#fff] hover:-translate-y-2 hover:shadow-[12px_12px_0_#fff] transition-all flex items-center justify-center gap-3">
                  Shop Now <ChevronRight className="w-6 h-6" strokeWidth={3} />
                </button>
              </div>
            </div>

            {/* DYNAMIC IMAGE CAROUSEL */}
            <div className="md:w-1/2 w-full relative perspective-1000">
               <div className="relative w-full max-w-lg mx-auto aspect-square transform-3d rotate-y-[-15deg] rotate-x-[10deg] hover:rotate-y-0 hover:rotate-x-0 transition-transform duration-700 ease-out">
                  <div className={`absolute inset-0 rounded-[3rem] border-4 border-slate-900 translate-x-10 translate-y-10 transition-colors duration-500 shadow-2xl ${backCat.color2}`}></div>
                  <div className={`absolute inset-0 rounded-[3rem] border-4 border-slate-900 translate-x-5 translate-y-5 transition-colors duration-500 shadow-xl ${prevCat.color1}`}></div>
                  <div className="relative z-10 w-full h-full bg-slate-100 rounded-[3rem] border-4 border-slate-900 overflow-hidden shadow-2xl group cursor-grab active:cursor-grabbing" onTouchStart={onTouchStart} onTouchMove={onTouchMove} onTouchEnd={onTouchEndEvent}>
                    <div className="absolute top-6 right-6 bg-slate-900 text-white font-black px-5 py-3 rounded-xl border-4 border-white shadow-[6px_6px_0_#000] z-30 animate-pulse-slow transform rotate-6 transition-all text-xl">{currentCat.name}</div>
                    
                    {/* SWIPE BUTTONS */}
                    <button onClick={(e) => { e.stopPropagation(); prevHero(); }} className="absolute left-4 top-1/2 -translate-y-1/2 z-30 bg-white/90 backdrop-blur-sm p-3 rounded-full border-4 border-slate-900 shadow-[4px_4px_0_#000] hover:bg-orange-500 hover:text-white transition-colors hover:-translate-y-1"><ChevronLeft className="w-8 h-8 font-black" strokeWidth={3} /></button>
                    <button onClick={(e) => { e.stopPropagation(); nextHero(); }} className="absolute right-4 top-1/2 -translate-y-1/2 z-30 bg-white/90 backdrop-blur-sm p-3 rounded-full border-4 border-slate-900 shadow-[4px_4px_0_#000] hover:bg-orange-500 hover:text-white transition-colors hover:-translate-y-1"><ChevronRight className="w-8 h-8 font-black" strokeWidth={3} /></button>
                    
                    <div className="absolute bottom-6 left-1/2 -translate-x-1/2 z-30 bg-white/90 text-slate-900 font-bold px-4 py-2 rounded-full border-4 border-slate-900 shadow-[4px_4px_0_#000] md:hidden">üëà Swipe üëâ</div>
                    <img key={`img-${heroIdx}`} src={currentCat.image} alt={currentCat.name} className="w-full h-full object-cover mix-blend-multiply scale-110 group-hover:scale-125 transition-all duration-700 animate-image-swipe" />
                  </div>
               </div>
            </div>
          </div>
        </section>

        {/* Loyalty Marketing Banner */}
        <div className="bg-yellow-300 py-6 border-b-4 border-slate-900 overflow-hidden cursor-pointer hover:bg-yellow-400 transition-colors" onClick={() => navigate('rewards')}>
          <div className="max-w-7xl mx-auto px-6 flex flex-wrap justify-center gap-8 md:gap-24 animate-pulse-slow">
            <div className="flex items-center gap-3 bg-white px-6 py-3 rounded-xl border-4 border-slate-900 shadow-[4px_4px_0_#000] transform -rotate-1"><Trophy className="text-orange-500 w-8 h-8 fill-current"/><span className="font-black text-xl uppercase tracking-wider">Join Crown Club</span></div>
            <div className="flex items-center gap-3 bg-white px-6 py-3 rounded-xl border-4 border-slate-900 shadow-[4px_4px_0_#000] transform rotate-1"><Ticket className="text-purple-500 w-8 h-8"/><span className="font-black text-xl uppercase tracking-wider">Earn Rewards</span></div>
          </div>
        </div>

        <section className="py-24 px-6 max-w-7xl mx-auto pattern-bg relative">
          <h2 className="text-5xl md:text-7xl font-black text-slate-900 tracking-tighter text-center mb-16 drop-shadow-[4px_4px_0_#f97316] uppercase">Explore Categories ü§§</h2>
          <div className="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-6">
            {CATEGORIES.slice(1).map((cat, i) => {
              const themes = [{bg: 'bg-red-500'}, {bg: 'bg-pink-400'}, {bg: 'bg-orange-400'}, {bg: 'bg-teal-400'}, {bg: 'bg-yellow-300'}, {bg: 'bg-amber-500'}];
              return (
