    );
  };

  const ShopView = () => {
    const filteredProducts = PRODUCTS.filter(p => (activeCategory === 'All' || p.category === activeCategory) && (p.name.toLowerCase().includes(searchQuery.toLowerCase()) || p.category.toLowerCase().includes(searchQuery.toLowerCase())));
    return (
