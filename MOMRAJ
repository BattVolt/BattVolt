              <span className={`inline-block border-2 font-black px-4 py-1 rounded-xl text-sm uppercase tracking-wider mb-4 w-max shadow-[3px_3px_0_#000] ${selectedProduct.isHamper ? 'bg-pink-100 text-pink-700 border-pink-700' : 'bg-orange-100 text-orange-700 border-orange-700'}`}>{selectedProduct.category}</span>
              <h1 className="text-4xl md:text-6xl font-black text-slate-900 mb-6 leading-[1.1] uppercase drop-shadow-[2px_2px_0_#cbd5e1]">{selectedProduct.name}</h1>
              <div className="flex items-end gap-4 mb-8">
