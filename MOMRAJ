          <button onClick={() => navigate('shop')} className="mt-6 bg-orange-500 text-white font-black text-2xl px-10 py-5 rounded-2xl border-4 border-slate-900 shadow-[8px_8px_0_#000] hover:-translate-y-2 transition-transform">Fill It Up!</button>
        </div>
      ) : (
        <div className="grid lg:grid-cols-3 gap-12">
          <div className="lg:col-span-2 space-y-6">
            {cart.map(item => (
              <div key={item.id} className={`flex flex-col sm:flex-row items-center gap-6 p-6 rounded-3xl border-4 border-slate-900 shadow-[8px_8px_0_#000] relative ${item.isCustomHamper ? 'bg-purple-100' : 'bg-white'}`}>
                <button onClick={() => removeFromCart(item.id)} className="absolute top-4 right-4 sm:relative bg-red-500 text-white p-3 rounded-xl border-4 border-slate-900 shadow-[4px_4px_0_#000] hover:-translate-y-1 transition-all sm:order-last ml-auto"><Trash2 className="w-6 h-6" /></button>
                <img src={item.image} alt={item.name} className="w-32 h-32 object-cover rounded-2xl border-4 border-slate-900" />
                <div className="flex-grow text-center sm:text-left w-full">
                  <h3 className="text-2xl font-black text-slate-900 uppercase leading-tight mb-2">{item.name}</h3>
                  {item.isCustomHamper && (
                    <div className="mb-2 text-sm font-bold text-slate-700 bg-white p-2 rounded-lg border-2 border-slate-900 inline-block w-full">Contents: {item.items.map(i => i.name).join(', ')}</div>
                  )}
                  <div className="text-3xl text-orange-600 font-black drop-shadow-[1px_1px_0_#000]">‚Çπ{item.price}</div>
                </div>
                {!item.isCustomHamper && (
                  <div className="flex items-center gap-4 bg-slate-100 rounded-2xl p-2 border-4 border-slate-900 shadow-[4px_4px_0_#000]">
                    <button onClick={() => updateQty(item.id, -1)} className="w-10 h-10 rounded-xl bg-white border-2 border-slate-900 flex items-center justify-center font-black text-xl hover:bg-orange-500 active:scale-95"><Minus className="w-5 h-5"/></button>
                    <span className="font-black text-2xl w-8 text-center">{item.qty}</span>
                    <button onClick={() => updateQty(item.id, 1)} className="w-10 h-10 rounded-xl bg-white border-2 border-slate-900 flex items-center justify-center font-black text-xl hover:bg-orange-500 active:scale-95"><Plus className="w-5 h-5"/></button>
                  </div>
                )}
              </div>
            ))}
          </div>
          <div className="lg:col-span-1">
            <div className="bg-white p-8 rounded-[2rem] border-4 border-slate-900 shadow-[12px_12px_0_#f97316] sticky top-32">
              <h2 className="text-3xl font-black text-slate-900 mb-8 uppercase border-b-4 border-slate-900 pb-4">Checkout Bill</h2>
              <div className="space-y-4 text-slate-700 font-bold text-lg mb-8">
                <div className="flex justify-between"><span>Items Subtotal</span><span>‚Çπ{cartTotal}</span></div>
                <div className="flex justify-between text-teal-600"><span>Delivery ‚ö°</span><span>FREE</span></div>
                <div className="h-1 bg-slate-900 my-6"></div>
                <div className="flex justify-between text-4xl font-black text-slate-900 uppercase"><span>Total</span><span className="text-orange-600 drop-shadow-[2px_2px_0_#000]">‚Çπ{cartTotal}</span></div>
              </div>
              <button onClick={() => navigate('checkout')} className="w-full bg-slate-900 text-white font-black text-2xl uppercase py-5 rounded-2xl border-4 border-slate-900 shadow-[8px_8px_0_#000] hover:-translate-y-2 transition-all flex justify-center items-center gap-2">Pay Securely <Zap className="w-6 h-6 fill-yellow-400 text-yellow-400" /></button>
            </div>
          </div>
        </div>
      )}
    </div>
  );

  const CheckoutView = () => (
    <div className="max-w-4xl mx-auto px-6 py-12 animate-fade-in min-h-[70vh]">
      <h1 className="text-6xl font-black text-slate-900 tracking-tighter mb-12 drop-shadow-[4px_4px_0_#34d399] uppercase text-center">Final Step üöÄ</h1>
      <form onSubmit={(e) => { e.preventDefault(); const generatedId = 'MRJ' + Math.floor(100000 + Math.random() * 900000); setLatestOrderId(generatedId); setTimeout(() => { setCart([]); navigate('success'); }, 800); }} className="bg-white p-10 rounded-[3rem] border-4 border-slate-900 shadow-[16px_16px_0_#000]">
        <h2 className="text-3xl font-black mb-8 flex items-center gap-3 uppercase"><MapPin className="text-orange-500 w-8 h-8"/> Where to send?</h2>
        <div className="grid md:grid-cols-2 gap-8 mb-12">
          <div className="md:col-span-2"><input required type="text" placeholder="Full Name" className="w-full bg-slate-50 border-4 border-slate-900 rounded-2xl px-6 py-4 text-xl font-bold focus:outline-none focus:shadow-[8px_8px_0_#f97316]" /></div>
          <div className="md:col-span-2"><textarea required placeholder="Complete Address" className="w-full bg-slate-50 border-4 border-slate-900 rounded-2xl px-6 py-4 text-xl font-bold focus:outline-none focus:shadow-[8px_8px_0_#f97316] h-32"></textarea></div>
        </div>
        <button type="submit" className="w-full bg-orange-500 text-white font-black text-3xl uppercase py-6 rounded-2xl border-4 border-slate-900 shadow-[12px_12px_0_#000] hover:-translate-y-2 transition-all">Confirm Order (‚Çπ{cartTotal})</button>
      </form>
    </div>
  );

  const SuccessView = () => {
    const [boxOpened, setBoxOpened] = useState(false);
    const [isShaking, setIsShaking] = useState(false);

    const handleOpenBox = () => {
      if(boxOpened) return;
      setIsShaking(true);
      setTimeout(() => { setIsShaking(false); setBoxOpened(true); }, 1000);
    };

    return (
      <div className="max-w-4xl mx-auto px-6 py-20 text-center animate-fade-in min-h-[80vh] flex flex-col items-center justify-center relative pattern-bg">
        <h1 className="text-6xl md:text-8xl font-black text-slate-900 mb-6 tracking-tighter uppercase drop-shadow-[4px_4px_0_#f97316]">Order Confirmed!</h1>
        <div className="bg-white p-6 rounded-[2rem] border-4 border-slate-900 shadow-[8px_8px_0_#000] mb-12 w-full max-w-lg mx-auto">
          <p className="text-2xl text-slate-700 font-bold mb-2">Your Order ID is:</p>
          <p className="text-4xl font-black text-orange-600 bg-orange-50 py-2 rounded-xl border-4 border-slate-900 border-dashed">{latestOrderId}</p>
        </div>
        <div className="w-full max-w-3xl bg-purple-200 border-4 border-slate-900 rounded-[3rem] p-10 shadow-[16px_16px_0_#000] relative overflow-hidden transition-all duration-500">
          {!boxOpened ? (
            <div className="flex flex-col items-center">
              <h2 className="text-4xl font-black text-slate-900 uppercase mb-4 animate-pulse">Wait! Don't leave yet...</h2>
              <p className="text-xl font-bold text-slate-700 mb-8">You unlocked a secret Mystery Box with your order. Tap to open it!</p>
              <button onClick={handleOpenBox} className={`text-8xl cursor-pointer hover:scale-110 transition-transform ${isShaking ? 'animate-shake' : 'animate-bounce'}`}>üéÅ</button>
              <p className="mt-6 font-bold text-purple-600 uppercase tracking-widest text-sm">Tap the box</p>
            </div>
          ) : (
            <div className="flex flex-col items-center animate-pop">
              <div className="text-8xl mb-6">üéâ</div>
              <h2 className="text-5xl font-black text-slate-900 uppercase mb-4 drop-shadow-[3px_3px_0_#fcd34d]">You Won 20% OFF!</h2>
              <p className="text-2xl font-bold text-slate-700 mb-8 max-w-lg">Claim your reward on your next order. Only valid for the next 7 days!</p>
              <div className="bg-yellow-300 text-slate-900 border-4 border-slate-900 border-dashed rounded-2xl px-10 py-6 mb-8 transform -rotate-2">
                <span className="text-sm font-black uppercase tracking-widest block mb-2">Use Promo Code</span>
                <span className="text-5xl font-black tracking-tighter select-all">RECRUNCH20</span>
              </div>
              <button onClick={() => navigate('shop')} className="bg-slate-900 text-white font-black text-2xl uppercase px-12 py-6 rounded-2xl shadow-[8px_8px_0_#f97316] hover:-translate-y-2 transition-all">Shop Next Order Now üëâ</button>
            </div>
          )}
        </div>
      </div>
    );
  };

  const RewardsView = () => {
    // Determine tier based on points dynamically
    const nextTier = 1000;
    const progress = Math.min(100, (crownPoints / nextTier) * 100);
    const tierName = crownPoints >= 1000 ? 'Raja üëë' : 'Minister';
    
    // --- MINI-GAME STATE (SNACK MATCH) ---
    const SNACK_EMOJIS = ['üçü', 'üç¨', 'ü•ú', 'ü•®'];
    const [gameState, setGameState] = useState('idle'); // idle, playing, won, lost
    const [cards, setCards] = useState([]);
    const [flippedIdxs, setFlippedIdxs] = useState([]);
    const [matchedPairs, setMatchedPairs] = useState(0);
    const [timeLeft, setTimeLeft] = useState(20);

    const startGame = () => {
      // Create deck and shuffle
      const deck = [...SNACK_EMOJIS, ...SNACK_EMOJIS]
        .sort(() => Math.random() - 0.5)
        .map((emoji, idx) => ({ id: idx, emoji, isFlipped: false, isMatched: false }));
      setCards(deck);
      setFlippedIdxs([]);
      setMatchedPairs(0);
      setTimeLeft(20);
      setGameState('playing');
    };

    // Timer Effect for mini-game
    useEffect(() => {
      let timer;
      if (gameState === 'playing' && timeLeft > 0) {
        timer = setTimeout(() => setTimeLeft(prev => prev - 1), 1000);
      } else if (gameState === 'playing' && timeLeft === 0) {
        setGameState('lost');
      }
      return () => clearTimeout(timer);
    }, [timeLeft, gameState]);

    // Handle Card Click for mini-game
    const handleCardClick = (idx) => {
      // Prevent flipping if game is over, card is already flipped, matched, or 2 cards are currently flipping
      if (gameState !== 'playing' || cards[idx].isFlipped || cards[idx].isMatched || flippedIdxs.length >= 2) return;

      const newFlipped = [...flippedIdxs, idx];
      setFlippedIdxs(newFlipped);

      // Optimistically flip the card
      const newCards = [...cards];
      newCards[idx].isFlipped = true;
      setCards(newCards);

      // Check for match if 2 cards are flipped
      if (newFlipped.length === 2) {
        const [firstIdx, secondIdx] = newFlipped;
        
        if (newCards[firstIdx].emoji === newCards[secondIdx].emoji) {
          // MATCH!
          setTimeout(() => {
            const matchedCards = [...newCards];
            matchedCards[firstIdx].isMatched = true;
            matchedCards[secondIdx].isMatched = true;
            setCards(matchedCards);
            setFlippedIdxs([]);
            
            setMatchedPairs(prev => {
              const newPairs = prev + 1;
              if (newPairs === SNACK_EMOJIS.length) {
                setGameState('won');
                setCrownPoints(p => p + 50); // Award 50 points to global balance!
              }
              return newPairs;
            });
          }, 500);
        } else {
          // NO MATCH, flip back
          setTimeout(() => {
            const resetCards = [...newCards];
            resetCards[firstIdx].isFlipped = false;
            resetCards[secondIdx].isFlipped = false;
            setCards(resetCards);
            setFlippedIdxs([]);
          }, 800);
        }
      }
    };

    return (
      <div className="bg-[#FFFBF0] min-h-screen py-12 px-6 animate-fade-in relative pattern-bg">
        <div className="max-w-5xl mx-auto">
          <div className="text-center mb-16 relative">
             <div className="absolute top-0 left-1/2 -translate-x-1/2 -translate-y-1/2 text-8xl animate-pulse-slow opacity-20 filter drop-shadow-[4px_4px_0_#000]">üëë</div>
             <h1 className="text-6xl md:text-8xl font-black text-slate-900 tracking-tighter uppercase drop-shadow-[4px_4px_0_#eab308] relative z-10">Crown Club</h1>
             <p className="text-2xl font-bold text-slate-700 mt-4 bg-white inline-block px-6 py-2 rounded-full border-4 border-slate-900 shadow-[4px_4px_0_#000] relative z-10">Earn snacks while you eat snacks.</p>
          </div>
          <div className="grid md:grid-cols-3 gap-8 mb-12">
            <div className="md:col-span-2 bg-yellow-300 border-4 border-slate-900 rounded-[3rem] p-10 shadow-[12px_12px_0_#000]">
              <div className="flex justify-between items-start mb-8">
                <div>
                  <p className="text-xl font-black uppercase tracking-widest text-slate-700">Your Balance</p>
                  <div className="flex items-end gap-3"><span className="text-8xl font-black text-slate-900 tracking-tighter drop-shadow-[3px_3px_0_#fff]">{crownPoints}</span><span className="text-3xl font-black pb-2">Crowns üëë</span></div>
                </div>
                <div className="bg-white border-4 border-slate-900 px-4 py-2 rounded-xl font-black text-xl shadow-[4px_4px_0_#000] transform rotate-3">Tier: {tierName}</div>
              </div>
              <div className="mb-4">
                <div className="flex justify-between font-black uppercase mb-2"><span>Current: {tierName}</span><span>Next: Raja ({nextTier} C)</span></div>
                <div className="h-6 w-full bg-white rounded-full border-4 border-slate-900 overflow-hidden"><div className="h-full bg-orange-500 border-r-4 border-slate-900 transition-all duration-1000" style={{ width: `${progress}%` }}></div></div>
                <p className="font-bold text-slate-700 mt-3 text-sm">Earn {Math.max(0, nextTier - crownPoints)} more Crowns to unlock FREE SHIPPING for life! üöÄ</p>
              </div>
            </div>
            <div className="bg-white border-4 border-slate-900 rounded-[3rem] p-8 shadow-[12px_12px_0_#000] flex flex-col justify-center">
              <h3 className="text-2xl font-black uppercase mb-6 border-b-4 border-slate-900 pb-2">How to Earn</h3>
              <ul className="space-y-4 font-bold text-lg text-slate-700">
                <li className="flex items-center gap-3"><ShoppingBag className="w-6 h-6 text-orange-500"/> 1 Crown per ‚Çπ1 spent</li>
                <li className="flex items-center gap-3"><Star className="w-6 h-6 text-yellow-500 fill-current"/> +50 C for reviewing</li>
                <li className="flex items-center gap-3"><User className="w-6 h-6 text-purple-500"/> +200 C Referral Bonus</li>
              </ul>
              <button onClick={() => navigate('shop')} className="mt-8 bg-slate-900 text-white font-black uppercase py-4 rounded-xl border-4 border-slate-900 shadow-[6px_6px_0_#f97316] hover:-translate-y-1 transition-transform w-full">Shop to Earn</button>
            </div>
          </div>

          {/* --- THE CROWN CLUB MINI GAME --- */}
          <div className="bg-teal-300 border-4 border-slate-900 rounded-[3rem] p-8 md:p-10 shadow-[12px_12px_0_#000] mb-12 relative overflow-hidden">
            <div className="flex justify-between items-center mb-6">
              <h3 className="text-3xl font-black uppercase text-slate-900 drop-shadow-[2px_2px_0_#fff] flex items-center gap-3">
                <Gamepad2 className="w-8 h-8" /> Snack Match 
              </h3>
              {gameState === 'playing' && <div className="bg-white border-4 border-slate-900 px-4 py-2 rounded-xl font-black text-xl shadow-[4px_4px_0_#000] animate-pulse">‚è≥ {timeLeft}s</div>}
            </div>

            {gameState === 'idle' && (
              <div className="text-center py-10 bg-white/50 backdrop-blur-sm rounded-2xl border-4 border-slate-900">
                <span className="text-6xl mb-4 block">üÉè</span>
                <p className="text-2xl font-black uppercase mb-2">Match 4 pairs in 20 seconds!</p>
                <p className="font-bold text-slate-700 mb-6">Win 50 Crowns to use on your next order.</p>
                <button onClick={startGame} className="bg-orange-500 text-white font-black text-2xl uppercase px-10 py-4 rounded-xl border-4 border-slate-900 shadow-[6px_6px_0_#000] hover:-translate-y-1 transition-all">Play Now ‚ñ∂Ô∏è</button>
              </div>
            )}

            {gameState === 'playing' && (
              <div className="grid grid-cols-4 gap-3 sm:gap-6 max-w-md mx-auto">
                {cards.map((card, idx) => (
                   <button
                     key={idx}
                     onClick={() => handleCardClick(idx)}
                     className={`aspect-square text-4xl sm:text-5xl flex items-center justify-center rounded-2xl border-4 border-slate-900 transition-all transform ${card.isFlipped || card.isMatched ? 'bg-white shadow-[inset_4px_4px_0_#cbd5e1]' : 'bg-yellow-300 shadow-[4px_4px_0_#000] hover:bg-yellow-400 hover:-translate-y-1'}`}
                   >
                     {(card.isFlipped || card.isMatched) ? card.emoji : '?'}
                   </button>
                ))}
              </div>
            )}

            {(gameState === 'won' || gameState === 'lost') && (
              <div className="text-center py-10 bg-white/90 backdrop-blur-md rounded-2xl border-4 border-slate-900">
                <span className="text-6xl mb-4 block">{gameState === 'won' ? 'üéâ' : 'üò≠'}</span>
                <p className="text-3xl font-black uppercase mb-2">
                  {gameState === 'won' ? 'You Won 50 Crowns!' : 'Time Out!'}
                </p>
                <p className="font-bold text-slate-700 mb-6">
                  {gameState === 'won' ? 'Points have been added to your balance above.' : 'Too slow. Better luck next time!'}
                </p>
                <button onClick={startGame} className="bg-slate-900 text-white font-black text-xl uppercase px-8 py-3 rounded-xl border-4 border-slate-900 shadow-[4px_4px_0_#f97316] hover:-translate-y-1 transition-all">Play Again</button>
              </div>
            )}
          </div>
          {/* --------------------------------- */}

          <h2 className="text-4xl font-black text-slate-900 uppercase mb-8 drop-shadow-[2px_2px_0_#fff]">Redeem Crowns üéÅ</h2>
          <div className="grid md:grid-cols-3 gap-6">
            <div className="bg-orange-100 border-4 border-slate-900 rounded-3xl p-6 shadow-[6px_6px_0_#000] flex flex-col items-center text-center hover:-translate-y-2 transition-transform cursor-pointer">
              <div className="bg-white p-4 rounded-full border-4 border-slate-900 shadow-[4px_4px_0_#000] mb-4"><Ticket className="w-8 h-8 text-orange-600"/></div>
              <h3 className="text-2xl font-black uppercase mb-2">‚Çπ100 OFF</h3><p className="font-bold text-slate-600 mb-4">Any order over ‚Çπ500</p><button className="bg-slate-900 text-white w-full font-black uppercase py-3 rounded-xl">Redeem 500 C</button>
            </div>
            <div className="bg-pink-100 border-4 border-slate-900 rounded-3xl p-6 shadow-[6px_6px_0_#000] flex flex-col items-center text-center hover:-translate-y-2 transition-transform cursor-pointer opacity-60">
              <div className="bg-white p-4 rounded-full border-4 border-slate-900 shadow-[4px_4px_0_#000] mb-4"><Unlock className="w-8 h-8 text-pink-600"/></div>
              <h3 className="text-2xl font-black uppercase mb-2">Secret Snack</h3><p className="font-bold text-slate-600 mb-4">Unlock limited edition flavors</p><button className="bg-slate-300 text-slate-600 w-full font-black uppercase py-3 rounded-xl border-4 border-slate-900" disabled>Need 1000 C</button>
            </div>
            <div className="bg-teal-100 border-4 border-slate-900 rounded-3xl p-6 shadow-[6px_6px_0_#000] flex flex-col items-center text-center hover:-translate-y-2 transition-transform cursor-pointer opacity-60">
              <div className="bg-white p-4 rounded-full border-4 border-slate-900 shadow-[4px_4px_0_#000] mb-4"><Truck className="w-8 h-8 text-teal-600"/></div>
              <h3 className="text-2xl font-black uppercase mb-2">Free Delivery</h3><p className="font-bold text-slate-600 mb-4">No minimum order value</p><button className="bg-slate-300 text-slate-600 w-full font-black uppercase py-3 rounded-xl border-4 border-slate-900" disabled>Need 2000 C</button>
            </div>
          </div>
        </div>
      </div>
    );
  };

  const TrackOrderView = () => {
    const [searchInput, setSearchInput] = useState(latestOrderId || '');
    const [trackState, setTrackState] = useState('idle');
    const [currentStep, setCurrentStep] = useState(0);
    const handleTrack = (e) => { e.preventDefault(); if(!searchInput.trim()) return; setTrackState('loading'); setTimeout(() => { const isNew = searchInput === latestOrderId; setCurrentStep(isNew ? 1 : Math.floor(Math.random() * 5)); setTrackState('found'); }, 1500); };
    const STEPS = [ { title: 'Order Placed', desc: 'We received your order.', icon: <CheckCircle className="w-6 h-6"/>, color: 'bg-green-400' }, { title: 'Packed with Love', desc: 'Snacks securely boxed.', icon: <Package className="w-6 h-6"/>, color: 'bg-pink-400' }, { title: 'Shipped', desc: 'Handed over to delivery partner.', icon: <Truck className="w-6 h-6"/>, color: 'bg-blue-400' }, { title: 'Out for Delivery', desc: 'Arriving today!', icon: <Navigation className="w-6 h-6"/>, color: 'bg-yellow-400' }, { title: 'Delivered', desc: 'Enjoy your snacks!', icon: <Crown className="w-6 h-6"/>, color: 'bg-orange-500' }, ];
    return (
      <div className="bg-[#FFFBF0] min-h-[80vh] py-12 px-6 animate-fade-in relative pattern-bg">
        <div className="max-w-4xl mx-auto">
          <div className="text-center mb-12"><h1 className="text-6xl md:text-8xl font-black text-slate-900 tracking-tighter uppercase drop-shadow-[4px_4px_0_#2dd4bf]">Track Order üöö</h1></div>
          <div className="bg-white border-4 border-slate-900 rounded-[3rem] p-8 md:p-12 shadow-[16px_16px_0_#000]">
            <form onSubmit={handleTrack} className="flex flex-col md:flex-row gap-4 mb-12"><input type="text" value={searchInput} onChange={(e) => setSearchInput(e.target.value.toUpperCase())} placeholder="Order ID (e.g., MRJ1234)" className="flex-grow bg-slate-50 border-4 border-slate-900 rounded-2xl px-6 py-5 text-2xl font-black focus:outline-none focus:bg-white focus:shadow-[6px_6px_0_#2dd4bf] transition-all uppercase placeholder:text-slate-400" /><button type="submit" className="bg-teal-400 text-slate-900 font-black text-2xl uppercase px-10 py-5 rounded-2xl border-4 border-slate-900 shadow-[6px_6px_0_#000] hover:-translate-y-1 hover:shadow-[10px_10px_0_#000] transition-all">Track It üîç</button></form>
            {trackState === 'loading' && ( <div className="text-center py-20 flex flex-col items-center"><Truck className="w-20 h-20 text-teal-400 animate-bounce drop-shadow-[4px_4px_0_#000] mb-6" /><h3 className="text-3xl font-black uppercase tracking-widest text-slate-900 animate-pulse">Locating Package...</h3></div> )}
            {trackState === 'found' && (
              <div className="animate-fade-in">
                <div className="flex justify-between items-center bg-slate-100 p-6 rounded-2xl border-4 border-slate-900 mb-10 shadow-[6px_6px_0_#000]"><div><p className="text-sm font-bold text-slate-500 uppercase">Order ID</p><p className="text-2xl font-black text-slate-900">{searchInput}</p></div><div className="text-right"><p className="text-sm font-bold text-slate-500 uppercase">Estimated Delivery</p><p className="text-2xl font-black text-teal-600 drop-shadow-[1px_1px_0_#000]">{currentStep === 4 ? 'Delivered' : 'Tomorrow, 2:00 PM'}</p></div></div>
                <div className="relative pl-6 md:pl-10 space-y-12">
                  <div className="absolute top-4 left-11 md:left-[3.25rem] w-2 h-[calc(100%-4rem)] bg-slate-200 rounded-full border-2 border-slate-900"><div className="w-full bg-teal-400 rounded-full transition-all duration-1000 border-r-2 border-slate-900" style={{ height: `${(currentStep / (STEPS.length - 1)) * 100}%` }}></div></div>
                  {STEPS.map((step, index) => { const isActive = index <= currentStep; const isLastActive = index === currentStep; return ( <div key={index} className={`relative flex items-center gap-6 md:gap-10 transition-all duration-500 ${isActive ? 'opacity-100' : 'opacity-40 grayscale'}`}><div className={`z-10 w-12 h-12 md:w-16 md:h-16 rounded-full border-4 border-slate-900 flex items-center justify-center flex-shrink-0 transition-transform ${isActive ? step.color : 'bg-slate-100 text-slate-400'} ${isLastActive ? 'scale-125 shadow-[4px_4px_0_#000] ring-4 ring-teal-200' : isActive ? 'shadow-[2px_2px_0_#000]' : ''}`}>{isActive ? <span className="text-slate-900">{step.icon}</span> : <Clock className="w-5 h-5"/>}</div><div className={`flex-grow bg-white p-6 rounded-2xl border-4 border-slate-900 transition-transform ${isLastActive ? 'shadow-[6px_6px_0_#2dd4bf] -translate-y-1' : isActive ? 'shadow-[4px_4px_0_#000]' : ''}`}><h3 className={`text-2xl font-black uppercase ${isLastActive ? 'text-teal-600' : 'text-slate-900'}`}>{step.title}</h3><p className="text-lg font-bold text-slate-600 mt-1">{step.desc}</p></div></div> ) })}
                </div>
              </div>
            )}
          </div>
        </div>
      </div>
    );
  };

  const Footer = () => (
    <footer className="bg-slate-900 text-white pt-24 pb-12 px-6 relative overflow-hidden border-t-8 border-orange-500">
      <div className="absolute top-0 left-0 w-full overflow-hidden leading-[0]"><svg data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none" className="relative block w-full h-[60px]"><path d="M321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V0H0V27.35A600.21,600.21,0,0,0,321.39,56.44Z" fill="#f97316"></path></svg></div>
      <div className="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-16 relative z-10 mt-10">
        <div>
          <div className="text-5xl font-black tracking-tighter text-white flex items-center mb-6 drop-shadow-[4px_4px_0_#f97316]">M<span className="relative inline-block mx-[2px] text-orange-500">O<Crown className="absolute -top-6 left-1/2 -translate-x-1/2 w-8 h-8 text-red-500" strokeWidth={3}/></span>MRAJ</div>
          <p className="font-bold text-xl text-slate-300">Authentic flavors. Gen Z swagger. üëë</p>
        </div>
        <div>
          <h4 className="font-black text-2xl mb-6 uppercase text-yellow-300 border-b-4 border-yellow-300 inline-block pb-2">Quick Hit</h4>
          <ul className="space-y-4 font-bold text-lg">
            <li><button onClick={() => navigate('tracking')} className="hover:text-teal-400 hover:translate-x-2 transition-transform flex items-center gap-2">üöö Track Order</button></li>
            <li><button onClick={() => navigate('custom-hamper')} className="hover:text-purple-400 hover:translate-x-2 transition-transform flex items-center gap-2">üéÅ Build Custom Hamper</button></li>
            <li><button onClick={() => navigate('rewards')} className="hover:text-yellow-400 hover:translate-x-2 transition-transform flex items-center gap-2">üëë Crown Club Rewards</button></li>
          </ul>
        </div>
      </div>
    </footer>
  );

  return (
    <div className="min-h-screen bg-[#FFFBF0] font-sans text-slate-900 selection:bg-orange-300 flex flex-col overflow-x-hidden">
      <Header />
      <main className="flex-grow">
        {currentPage === 'home' && <HomeView />}
        {currentPage === 'shop' && <ShopView />}
        {currentPage === 'product' && <ProductDetailView />}
        {currentPage === 'cart' && <CartView />}
        {currentPage === 'checkout' && <CheckoutView />}
        {currentPage === 'success' && <SuccessView />}
        {currentPage === 'tracking' && <TrackOrderView />}
        {currentPage === 'rewards' && <RewardsView />}
        {currentPage === 'gifting' && <HomeView />} 
        {currentPage === 'custom-hamper' && <HomeView />}
        {currentPage === 'wishlist' && <HomeView />}
      </main>
      <Footer />
      
      <style dangerouslySetInnerHTML={{__html: `
        @keyframes fade-in { from { opacity: 0; transform: translateY(15px); } to { opacity: 1; transform: translateY(0); } }
        @keyframes image-swipe { 0% { opacity: 0.5; transform: scale(1.05) translateX(10px); } 100% { opacity: 1; transform: scale(1.1) translateX(0); } }
        @keyframes marquee { 0% { transform: translateX(0); } 100% { transform: translateX(-50%); } }
        @keyframes ping-once { 0% { transform: scale(1); box-shadow: 0 0 0 0 rgba(249, 115, 22, 0.7); } 50% { transform: scale(1.1); box-shadow: 0 0 0 10px rgba(249, 115, 22, 0); } 100% { transform: scale(1); box-shadow: 0 0 0 0 rgba(249, 115, 22, 0); } }
        @keyframes shake { 0%, 100% { transform: translateX(0) rotate(0); } 20%, 60% { transform: translateX(-10px) rotate(-10deg); } 40%, 80% { transform: translateX(10px) rotate(10deg); } }
        @keyframes pop { 0% { opacity: 0; transform: scale(0.5); } 80% { transform: scale(1.05); } 100% { opacity: 1; transform: scale(1); } }
        
        .animate-fade-in { animation: fade-in 0.4s ease-out forwards; }
        .animate-image-swipe { animation: image-swipe 0.4s cubic-bezier(0.16, 1, 0.3, 1) forwards; }
        .animate-marquee { display: inline-flex; width: max-content; animation: marquee 20s linear infinite; }
        .animate-ping-once { animation: ping-once 0.3s ease-out; }
        .animate-shake { animation: shake 0.5s ease-in-out infinite; }
        .animate-pop { animation: pop 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards; }
        
        .pattern-bg { background-color: #FFFBF0; background-image: radial-gradient(#cbd5e1 1.5px, transparent 1.5px); background-size: 30px 30px; }
        .perspective-1000 { perspective: 1000px; }
        .transform-3d { transform-style: preserve-3d; }
      `}} />
    </div>
  );
}
