                  <span className="font-black text-3xl w-12 text-center">{qty}</span>
                  <button onClick={() => setQty(qty+1)} className="w-14 h-14 rounded-xl bg-slate-100 border-2 border-slate-900 flex items-center justify-center hover:bg-orange-500 hover:text-white transition-colors"><Plus className="w-6 h-6 font-black" /></button>
                </div>
                <button onClick={() => { addToCart(selectedProduct, qty); navigate('cart'); }} className="flex-grow bg-slate-900 text-white font-black text-2xl uppercase rounded-2xl h-20 border-4 border-slate-900 shadow-[8px_8px_0_#f97316] hover:-translate-y-2 transition-all flex items-center justify-center gap-4">
                  <ShoppingBag className="w-8 h-8" /> Add to Cart
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    );
  };

  const CartView = () => (
    <div className="max-w-7xl mx-auto px-6 py-12 animate-fade-in min-h-[70vh]">
      <h1 className="text-6xl font-black text-slate-900 tracking-tighter mb-12 drop-shadow-[4px_4px_0_#f97316] uppercase">Your Cart üõí</h1>
      {cart.length === 0 ? (
        <div className="text-center py-24 bg-white rounded-[3rem] border-4 border-slate-900 shadow-[12px_12px_0_#000]">
