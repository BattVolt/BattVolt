        </div>
      </div>
    );
  };

  const ProductDetailView = () => {
    if (!selectedProduct) return null;
    const [qty, setQty] = useState(1);
    return (
      <div className="max-w-7xl mx-auto px-6 py-12 animate-fade-in">
